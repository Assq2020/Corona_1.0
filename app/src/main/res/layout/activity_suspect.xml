<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".Suspect" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textSize="40dp" android:background="#00bbff" android:textColor="#ffffff" android:gravity="center" android:text="Suspect Details" android:id="@+id/textView"/>


    -<ScrollView android:layout_height="0dp" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp">


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_gravity="left">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="You Know His/Her Name ?" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/name"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:inputType="text"
        android:hint="Name" />

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="You Know His/Her Gender ?" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>


    <RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/gender" android:layout_marginTop="10dp" android:layout_marginLeft="16dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALE"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHER"/>

    </RadioGroup>

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="Guess His/Her Age.." android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:id="@+id/age" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="number" android:hint="Age" />

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="You Know His/Her Address ?" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:gravity="top|left" android:id="@+id/address" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="textMultiLine" android:hint="Address" android:scrollbars="vertical" android:minLines="3" android:maxLines="6" android:lines="4"/>

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="Your Relation To Him/Her" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:id="@+id/relation" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="text" android:hint="Relation" />

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="You You Have His/Her Phone No. ?" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:id="@+id/phoneno" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="number" android:hint="Phone No." />

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="Any Other Mode Of Contact ? Pls Specify.." android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:id="@+id/other_mode" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="textLongMessage" android:hint="Other Mode Of Contact" />

    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#DDC5C5C5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20dp" android:textColor="#000000" android:text="Why You Have Doubt? Pls. Explain" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#000000" android:gravity="top|left" android:id="@+id/doubt" android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:paddingTop="10dp" android:inputType="textMultiLine" android:hint="Why doubt?" android:scrollbars="vertical" android:minLines="2" android:maxLines="4" android:lines="3"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:background="#000000" android:textColor="#ffffff" android:text="SUBMIT" android:id="@+id/submit" android:padding="16dp" android:layout_margin="16dp"/>

</LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>