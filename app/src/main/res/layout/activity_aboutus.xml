<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Aboutus" android:background="@android:color/white" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/about_ap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="11dp"
                android:foregroundGravity="center"
                android:src="@drawable/iconn"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/app_name_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="CoronaVirus"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/devoloper_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Devoloped by-ASSQ Group"
                android:padding="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Application"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This application is devoloped for tracking peoples and providing imformatontion related to covid19 to control the the spreed of desease.We devolope the app according to  the prescription of goverment of Jharkhand.In this app we analyze user symptems through assesment and give color code and advice according to thier symptems.This is not a genral app it's only for the time of covid19 pandemic so we collect your imformation and share it with goverment for controlling the pandemic.We also provide tips for guiding peoples to how to live during this emergency"
                android:padding="10dp"
                android:textSize="16sp"/>

        </LinearLayout>



